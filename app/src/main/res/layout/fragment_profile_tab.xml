<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/tabAColor"
    tools:context=".ProfileTab">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_p_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:textColorHint="#260e04"
        app:hintTextColor="#6D4C41"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:passwordToggleEnabled="false">

        <EditText
            android:id="@+id/edt_p_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tabAColor"
            android:ems="10"
            android:hint="Enter your profile username:"
            android:inputType="textPersonName"
            android:textColor="@color/social_text_color"
            android:textSize="18sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_p_bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textColorHint="#260e04"
        app:hintTextColor="#6d4c41"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_p_name"
        app:passwordToggleEnabled="false">

        <EditText
            android:id="@+id/edt_p_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tabAColor"
            android:ems="10"
            android:hint="Enter your bio:"
            android:inputType="textPersonName"
            android:textColor="@color/social_text_color"
            android:textSize="18sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_p_prof"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textColorHint="#260e04"
        app:hintTextColor="#6d4c41"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_p_bio"
        app:passwordToggleEnabled="false">

        <EditText
            android:id="@+id/edt_p_prof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tabAColor"
            android:ems="10"
            android:hint="Enter your profession:"
            android:inputType="textPersonName"
            android:textColor="@color/social_text_color"
            android:textSize="18sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_p_hob"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textColorHint="#260e04"
        app:hintTextColor="#6d4c41"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_p_prof"
        app:passwordToggleEnabled="false">

        <EditText
            android:id="@+id/edt_p_hob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tabAColor"
            android:ems="10"
            android:hint="Enter your hobbies:"
            android:inputType="textPersonName"
            android:textColor="@color/social_text_color"
            android:textSize="18sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_p_sport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:textColorHint="#260e04"
        app:hintTextColor="#6d4c41"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_p_hob"
        app:passwordToggleEnabled="false">

        <EditText
            android:id="@+id/edt_p_sport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tabAColor"
            android:ems="10"
            android:hint="Enter your favorite sports:"
            android:inputType="textPersonName"
            android:textColor="@color/social_text_color"
            android:textSize="18sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_p_update"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_p_sport"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:text="update info"
        android:textSize="16sp"
        android:textColor="@color/white"
        />




</androidx.constraintlayout.widget.ConstraintLayout>